<?language javascript?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<VBox fx:controller="ui.pages.login.LoginPageController"
      xmlns:fx="http://javafx.com/fxml" alignment="center">

    <padding><Insets top="10" right="10" bottom="20" left="10"/></padding>
    <children>
        <Text fx:id="infoText"/>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <children>
                <Text GridPane.rowIndex="0" GridPane.columnIndex="0"
                      text="Connection string" styleClass="label"/>
                <TextField fx:id="connectionField"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           text="jdbc:oracle:thin:@5.19.237.145:54321:xe"
                           onAction="java.lang.System.out.println('blabla')"/>

                <Text GridPane.rowIndex="1" GridPane.columnIndex="0"
                      text="Username" styleClass="label"/>
                <TextField fx:id="usernameField"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                           text="insurance_admin"/>

                <Text GridPane.rowIndex="2" GridPane.columnIndex="0"
                      text="Password"/>
                <PasswordField fx:id="passwordField"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Button GridPane.rowIndex="3" GridPane.columnSpan="2" text="Log in" onAction="#loginClick"/>
            </children>
        </GridPane>
    </children>
</VBox>