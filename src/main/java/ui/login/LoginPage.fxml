<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="ui.login.LoginPageController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text GridPane.rowIndex="0" GridPane.columnIndex="0"
          text="Connection string"/>
    <TextField fx:id="connectionField"
               GridPane.rowIndex="0" GridPane.columnIndex="1"
               text="jdbc:oracle:thin:@5.19.237.145:65432:xe"/>

    <Text GridPane.rowIndex="1" GridPane.columnIndex="0"
          text="Username"/>
    <TextField fx:id="usernameField"
               GridPane.rowIndex="1" GridPane.columnIndex="1"
               text="system"/>

    <Text GridPane.rowIndex="2" GridPane.columnIndex="0"
          text="Password"/>
    <PasswordField fx:id="passwordField"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button GridPane.rowIndex="3" GridPane.columnSpan="2" text="Log in" onAction="#loginClick"/>
</GridPane>